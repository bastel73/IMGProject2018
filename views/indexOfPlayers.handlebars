<h1>Spielerliste</h1>

{{#each players}}
<div class="card card-body mb-3">
    <h4>{{firstName}}</h4>
    <p>{{lastName}}</p>
    <p>{{dateOfBirth}}</p>
    <p>{{playerID}}</p> 
    <a class="btn btn-dark btn-block mb-2" href="/edit/{{id}}">Edit</a>
    <form method="post" action="/players/{{id}}?_method=DELETE">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>
{{else}}
<p>Keine Spieler in der Liste</p>
{{/each}}